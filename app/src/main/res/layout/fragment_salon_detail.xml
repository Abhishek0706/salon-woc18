<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="match_parent"
    tools:context=".Salon_detail">

    <LinearLayout
        android:id="@+id/salon_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/salon_imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:background="@drawable/ic_image_black_24dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/salon_info_name"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_of_salon"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/salon_info_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_of_salon"/>
        <TextView
            android:id="@+id/salon_info_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox

                android:id="@+id/info_cb_haircut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/haircut"/>

            <CheckBox
                android:id="@+id/info_cb_hairspa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hairspa" />
            <CheckBox
                android:id="@+id/info_cb_haircolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/haircolor" />
            <CheckBox
                android:id="@+id/info_cb_massage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/massage" />
            <CheckBox
                android:id="@+id/info_cb_facial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/facial" />
            <CheckBox
                android:id="@+id/info_cb_bleach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bleach" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/heading2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="@string/choose_your_slot"/>


            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time1" />
                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time2" />
                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time3" />
                <RadioButton
                    android:id="@+id/rb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time4" />
                <RadioButton
                    android:id="@+id/rb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time5" />
                <RadioButton
                    android:id="@+id/rb6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time6" />
                <RadioButton
                    android:id="@+id/rb7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time7" />
                <RadioButton
                    android:id="@+id/rb8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time8" />
                <RadioButton
                    android:id="@+id/rb9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time9" />
                <RadioButton
                    android:id="@+id/rb10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time10" />
                <RadioButton
                    android:id="@+id/rb11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time11" />
                <RadioButton
                    android:id="@+id/rb12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8pm-9pm" />
                <RadioButton
                    android:id="@+id/rb13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time13" />

            </RadioGroup>



        </LinearLayout>

        <Button
            android:id="@+id/btn_booknow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_now"
            android:background="@drawable/buttonstyle"
            android:layout_gravity="right"
            />
    </LinearLayout>

</ScrollView>