<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Salon_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/salon_imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/wp2542098"/>

        <TextView
            android:id="@+id/salon_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME OF SALON"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/salon_info_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="address of salon"/>
        <TextView
            android:id="@+id/salon_info_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone number"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox

                android:id="@+id/info_cb_haircut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="haircut"/>

            <CheckBox
                android:id="@+id/info_cb_hairspa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hairspa" />
            <CheckBox
                android:id="@+id/info_cb_haircolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="haircolor" />
            <CheckBox
                android:id="@+id/info_cb_massage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="massage" />
            <CheckBox
                android:id="@+id/info_cb_facial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="facial" />
            <CheckBox
                android:id="@+id/info_cb_bleach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bleach" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="CHOOSE YOUR SLOT"/>


            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9am-10am" />
                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10am-11am" />
                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11am-12pm" />
                <RadioButton
                    android:id="@+id/rb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12pm-1pm" />
                <RadioButton
                    android:id="@+id/rb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1pm-2pm" />
                <RadioButton
                    android:id="@+id/rb6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2pm-3pm" />
                <RadioButton
                    android:id="@+id/rb7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3pm-4pm" />
                <RadioButton
                    android:id="@+id/rb8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4pm-5pm" />
                <RadioButton
                    android:id="@+id/rb9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5pm-6pm" />
                <RadioButton
                    android:id="@+id/rb10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6pm-7pm" />
                <RadioButton
                    android:id="@+id/rb11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7pm-8pm" />
                <RadioButton
                    android:id="@+id/rb12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8pm-9pm" />
                <RadioButton
                    android:id="@+id/rb13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9pm-10pm" />

            </RadioGroup>



        </LinearLayout>

        <Button
            android:id="@+id/btn_booknow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="book now"
            android:layout_gravity="right"
            />
    </LinearLayout>

</ScrollView>